<?xml version="1.0" encoding="utf-8"?>

<com.weshare.widgets.SquareCardLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_margin="7.5dp"
                                      app:cardElevation="6dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

        <ImageView android:id="@+id/category_imageview" android:layout_width="48dp"
                   android:src="@drawable/play_icon"
                   android:layout_centerHorizontal="true"
                   android:layout_height="48dp"/>

        <TextView android:id="@+id/category_name_tv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/category_imageview"
                  android:layout_marginTop="10dp"
                  android:textSize="14sp"
                  android:gravity="center"
                  android:text="@string/app_name"
                  android:textColor="@android:color/white"/>
    </RelativeLayout>

</com.weshare.widgets.SquareCardLayout>

