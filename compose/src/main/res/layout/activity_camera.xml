<FrameLayout android:id="@+id/camera_root_layout"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <com.google.android.cameraview.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#232323"
        android:keepScreenOn="true"
        app:autoFocus="true"
        app:cameraAspectRatio="4:3"
        app:facing="back"
        app:flash="off"/>


    <!--生成合成图的视图-->
    <com.weshare.widgets.SmartStickerView
        android:id="@+id/sticker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:showIcons="true"
    >

        <ImageView
            android:id="@+id/prev_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </com.weshare.widgets.SmartStickerView>


    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:src="@drawable/close_icon"
    />


    <ProgressBar android:id="@+id/camera_progress_bar" style="@style/Widget.AppCompat.ProgressBar"
                 android:layout_width="48dp" android:layout_height="48dp"
                 android:visibility="gone"
                 android:layout_gravity="center"/>

    <!--bottom action layout-->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/stickers_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            app:srcCompat="@drawable/sticker_icon"
        />

        <Button
            android:id="@+id/take_photo_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/take_photo_bg"
        />

        <!--todo : 注意后续按钮都替换成图片, 不适用 vector 或者 svg -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/switch_camera_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
            app:srcCompat="@drawable/ic_switch_camera"
        />

    </RelativeLayout>


    <!--贴纸和滤镜 layout-->
    <include
        android:id="@+id/stickers_layout"
        layout="@layout/sticker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="invisible"/>

    <View
        android:id="@+id/shutter_effect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        android:background="@android:color/white"
        android:visibility="gone"/>

</FrameLayout>
